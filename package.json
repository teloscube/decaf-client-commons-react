{
  "name": "@decafhub/decaf-react",
  "version": "0.3.1",
  "keywords": [
    "decafhub",
    "react"
  ],
  "description": "A React library for Decaf Apps",
  "source": "src/index.tsx",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "alioguzhan <aoguzhanyildiz@gmail.com>",
  "repository": {
    "url": "https://github.com/teloscube/decaf-react",
    "type": "git"
  },
  "homepage": "https://github.com/teloscube/decaf-react",
  "license": "BSD-3-Clause",
  "private": false,
  "scripts": {
    "start": "microbundle --jsx React.createElement --jsxFragment React.Fragment --watch",
    "build": "microbundle --jsx React.createElement --jsxFragment React.Fragment",
    "test": "jest --coverage",
    "make:docs": "typedoc",
    "prepare": "npm run build && husky install"
  },
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "@decafhub/decaf-client": "^0.4",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@decafhub/decaf-client": "^0.4.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/js-cookie": "^3.0.3",
    "@types/node": "^20.4.9",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^13.2.3",
    "microbundle": "^0.15.1",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "./node_modules/.bin/prettier --write",
      "./node_modules/.bin/eslint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
